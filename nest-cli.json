{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "controllerFileNameSuffix": ".controller.ts",
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts"
          ]
        }
      }
    ],
    "assets": [
      "i18n/**/*"
    ]
  }
}